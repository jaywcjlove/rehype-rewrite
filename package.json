{
  "name": "rehype-rewrite",
  "version": "2.1.3",
  "description": "Rewrite element with rehype.",
  "homepage": "https://jaywcjlove.github.io/rehype-rewrite",
  "author": "Kenny Wong <wowohoo@qq.com>",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "main": "lib/index.js",
  "scripts": {
    "prepack": "npm run build",
    "start": "node lib/index.js",
    "watch": "tsbb watch --disable-babel",
    "build": "tsbb build --disable-babel && npm run esm-fix",
    "esm-fix": "tsc-esm-fix --target='lib' --ext='.js'",
    "type-check": "tsc --noEmit",
    "test": "tsbb test",
    "coverage": "tsbb test --coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jaywcjlove/rehype-rewrite"
  },
  "files": [
    "src",
    "lib"
  ],
  "keywords": [
    "rehype",
    "markdown",
    "rehype-rewrite",
    "rewrite",
    "javascript",
    "html",
    "ast",
    "unified"
  ],
  "jest": {
    "coverageReporters": [
      "lcov",
      "json-summary"
    ],
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/?!(.*)"
    ]
  },
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "dependencies": {
    "unified": "10.1.0",
    "unist-util-visit": "4.1.0",
    "unist-util-visit-parents": "5.1.0"
  },
  "devDependencies": {
    "rehype": "12.0.0",
    "rehype-stringify": "9.0.2",
    "rehype-raw": "6.1.0",
    "remark-parse": "10.0.0",
    "remark-rehype": "9.1.0",
    "tsc-esm-fix": "2.7.2",
    "tsbb": "3.4.0"
  }
}
